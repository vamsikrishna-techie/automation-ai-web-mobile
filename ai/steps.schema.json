{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object", 
  "required": ["app", "baseUrl", "feature", "scenarios"],
  "properties": {
    "app": { "type": "string", "enum": ["web", "mobile"] },
    "baseUrl": { "type": "string", "minLength": 1 },
    "feature": { "type": "string", "minLength": 1 },
    "scenarios": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "needsHuman", "steps"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "needsHuman": { "type": "boolean" },
          "steps": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["action"],
              "properties": {
                "action": {
                  "type": "string",
                  "enum": [
                    "goto",
                    "fill",
                    "click",
                    "assertUrlContains",
                    "assertVisible",
                    "assertTextContains"
                  ]
                },
                "testId": { "type": "string" },
                "value": { "type": "string" },
                "url": { "type": "string" },
                "contains": { "type": "string" }
              },
              "allOf": [
                {
                  "if": { "properties": { "action": { "const": "goto" } } },
                  "then": { "required": ["url"] }
                },
                {
                  "if": { "properties": { "action": { "const": "fill" } } },
                  "then": { "required": ["testId", "value"] }
                },
                {
                  "if": { "properties": { "action": { "const": "click" } } },
                  "then": { "required": ["testId"] }
                },
                {
                  "if": { "properties": { "action": { "const": "assertUrlContains" } } },
                  "then": { "required": ["contains"] }
                },
                {
                  "if": { "properties": { "action": { "const": "assertVisible" } } },
                  "then": { "required": ["testId"] }
                },
                {
                  "if": { "properties": { "action": { "const": "assertTextContains" } } },
                  "then": { "required": ["testId", "contains"] }
                }
              ]
            }
          }
        }
      }
    }
  }
}